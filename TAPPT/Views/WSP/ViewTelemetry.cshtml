@model IEnumerable<MeterDownloadSerializer>
@{
    ViewData["Title"] = "ViewTelemetry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Model.Any())
{
    
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <header class="white pt-3 relative shadow">
                <div class="container-fluid">
                    <div class="row p-t-b-10 ">
                        <div class="col">
                            <div class="pb-3">
                                <div class="image mr-3  float-left mb-3">
                                    <div class="icon-calculator text-mygreentwo s-64"></div>
                                </div>
                                <div class="mb-1">
                                    <h5>Telemetry Data For Meter Number @Model.Select(p => p.MeterCode).FirstOrDefault()</h5>
                                    <h5>Account Number @Model.Select(p => p.AccountNumber).FirstOrDefault()</h5>
                                    <h5>Account Name @Model.Select(p => p.Owner).FirstOrDefault()</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </header>
            @*<div class="card no-b shadow mb-3">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h5>Telemetry Data For Meter Number @Model.Select(p => p.MeterCode).FirstOrDefault() ,Account Number @Model.Select(p => p.AccountNumber).FirstOrDefault(), Account Name @Model.Select(p => p.Owner).FirstOrDefault() </h5>

                        </div>

                    </div>
                </div>
            </div>*@
            <div class="tab-pane animated fadeInUpShort show active"
                 id="v-pills-all"
                 role="tabpanel"
                 aria-labelledby="v-pills-all-tab">

                <div class="row my-3">
                    <div class="col-md-12">
                        <div class="card-body white r-0 shadow mb-5">
                            <div class="panel-heading text-center">
                                <div class="panel-body panelsetup">
                                    <h4>Returned Telemetry</h4>
                                    <hr />
                                </div>
                            </div>
                            <div class="table-responsive">
                                <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">
                                    <thead>
                                        <tr class="no-b">
                                            <th>
                                                <div class="d-none d-lg-block">Time and Date Transmitted</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Telemetry ID</div>
                                            </th>


                                            <th>
                                                <div class="d-none d-lg-block"> Daily Consumption (m<sup>3</sup>) </div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block"> Accumulated Consumption (m<sup>3</sup>)</div>
                                            </th>

                                            @*<th>
                                            <div class="d-none d-lg-block"> Battery Voltage (Volts) </div>
                                        </th>*@
                                            @*<th>
                                            <div class="d-none d-lg-block"> Signal Strength (DBi) </div>
                                        </th>
                                        <th>
                                            <div class="d-none d-lg-block"> Water Pressure (Pascals) </div>
                                        </th>*@
                                            @*<th>
                                            <div class="d-none d-lg-block"> Water Temperature (Degree Celsius)</div>
                                        </th>*@

                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            @foreach (var i in item.Readings)
                                            {

                                                <tr>
                                                    <td>
                                                        <div class="d-none d-lg-block">@i.TimeTaken</div>
                                                    </td>

                                                    <td>
                                                        <div class="d-none d-lg-block">@i.Id</div>
                                                    </td>


                                                    <td>
                                                        <div class="d-none d-lg-block text-right">@i.DaillyFowRate</div>
                                                    </td>
                                                    <td>
                                                        @*@{
                                                        var afr = Convert.ToDecimal(i.AccumulatedFlowRate);
                                                        var result = afr / 1000;
                                                        <div class="d-none d-lg-block">@result</div>
                                                    }*@



                                                        <div class="d-none d-lg-block text-right">@i.AccumulatedFlowRate</div>



                                                    </td>

                                                    @*<td>
                                                    <div class="d-none d-lg-block">@i.BateryVoltage</div>
                                                </td>*@

                                                    @*<td>
                                                    @{
                                                        var xyz = Convert.ToDecimal(i.SignalStrength);
                                                        var resultnetwork = xyz - 141;
                                                        <div class="d-none d-lg-block">@resultnetwork</div>
                                                    }
                                                </td>*@
                                                    @*<td>
                                                    <div class="d-none d-lg-block">@i.WaterPressure</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@i.WaterTemperature</div>
                                                </td>*@
                                                </tr>
                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="tab-pane animated fadeInUpShort"
                 id="v-pills-buyers"
                 role="tabpanel"
                 aria-labelledby="v-pills-buyers-tab"></div>
        </div>
    </div>
}
else
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="card no-b ">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Zone List</h1>
                            <h6>Nothing here yet, try again later</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane animated fadeInUpShort"
             id="v-pills-buyers"
             role="tabpanel"
             aria-labelledby="v-pills-buyers-tab"></div>
    </div>

}

