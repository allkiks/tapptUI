@model IEnumerable<WSPGetConsumptionAndRevenue>
@{
    ViewData["Title"] = "Todays billed volume";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3" id="v-pills-tabContent">
        <div class="card no-b r-0 shadow ">

            <div class="card-body">
                <div class="row my-3 ">
                    <div class="col-md-12">
                        <h3>Today's Consumption</h3>
                    </div>

                </div>
            </div>
        </div>


        <div class="row my-3">
            <div class="col-md-12">
                <div class="card-body white r-0 shadow mb-5">
                    <div class="panel-heading text-center">
                        <div class="panel-body panelsetup">
                            <h4>List Of Returned Meters</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="table-responsive datatablestyle">
                        <table id="tryy" class="table table-striped table-bordered display nowrap" style="width:100%">
                            <thead>
                                <tr class="no-b">
                                    <th>
                                        <div class="d-none d-lg-block">Time and Date Transmitted</div>
                                    </th>
                                    <th>
                                        <div class="d-none d-lg-block">Telemetry ID</div>
                                    </th>
                                    <th>
                                        <div class="d-none d-lg-block">Meter Code</div>
                                    </th>
                                    <th>
                                        <div class="d-none d-lg-block">Account Number</div>
                                    </th>
                                    <th>
                                        <div class="d-none d-lg-block">Account Name</div>
                                    </th>

                                    <th>
                                        <div class="d-none d-lg-block">Accumulated Volume (m<sup>3</sup>)</div>
                                    </th>

                                    <th>
                                        <div class="d-none d-lg-block">Bill Amount (Kshs)</div>
                                    </th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-none d-lg-block">
                                                @item.LastTransmitted
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-none d-lg-block text-right">@item.Id</div>
                                        </td>

                                        <td>
                                            <div class="d-flex">
                                                <div>
                                                    <div>
                                                        <strong>@item.MeterCode</strong>
                                                    </div>

                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-none d-lg-block text-right">@item.AccountNumber</div>
                                        </td>
                                        <td>
                                            <div class="d-none d-lg-block">@item.AccountName</div>
                                        </td>


                                        <td>
                                            <div class="d-none d-lg-block text-right">
                                                @item.AccumulatedFlowRate
                                            </div>
                                        </td>


                                        <td>
                                            <div class="d-none d-lg-block text-right">
                                                @item.Bill
                                            </div>
                                        </td>


                                        @*<td>
                                                <a href="/WSP/MeterDetails/@item.Id">
                                                    <button type="button" class="btn btn-primary btn-sm ml-5">View details</button>
                                                </a>
                                            </td>*@
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


