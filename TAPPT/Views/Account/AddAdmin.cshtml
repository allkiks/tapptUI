@{
    ViewData["Title"] = "Add A New Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model RegisterViewModel

<div class="container-fluid animatedParent animateOnce">
    <div class="card no-b shadow mt-3">

        <div class="card-body">
            <div class="row my-3 ">
                <div class="col-md-12">
                    <h1>Add An Admin</h1>
                    <h6>Fill in the form below to add a new admin</h6>
                </div>

            </div>
        </div>
    </div>
    <div class="animated fadeInUpShort">
        <div class="row my-3">
            <div class="col-md-12  mt-4">
                <form asp-action="AddAdmin" asp-controller="Account" method="post" asp-antiforgery="true">
                    <div class="card no-b shadow">
                        <div class="card-body">
                            <h5 class="card-title"></h5>
                                Fill In The Details Below To Add A New Admin
                                @{
                                    await Html.RenderPartialAsync("_ValidationErrorPartial");
                                }
                                <div class="form-row mt-1">
                                    <div class="form-group col-md-4 m-0">
                                        <label for="FirstName" class="col-form-label s-12"><i class="icon-user mr-2 text-mygreentwo"></i>First Name</label>
                                        <input id="email"
                                               asp-for="FirstName"
                                               placeholder="First Name"
                                               class="form-control r-0 light s-12"
                                               required
                                               type="text" />
                                        <span asp-validation-for="FirstName" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-4 m-0">
                                        <label for="MiddleName" class="col-form-label s-12"><i class="icon-user mr-2 text-mygreentwo"></i>Middle Name (optional)</label>
                                        <input id="phone"
                                               asp-for="MiddleName"
                                               placeholder="Middle Name"
                                               class="form-control r-0 light s-12 "
                                               type="text" />
                                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4 m-0">
                                        <label for="LastName" class="col-form-label s-12">
                                            <i class="icon-user mr-2 text-mygreentwo"></i>Last Name
                                        </label>
                                        <input id="LastName"
                                               asp-for="LastName"
                                               placeholder="Last Name"
                                               class="form-control r-0 light s-12 "
                                               required
                                               type="text" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="form-row mt-5">
                                    <div class="form-group col-md-4 m-0">
                                        <label for="PhoneNumber" class="col-form-label s-12"><i class="icon-phone mr-2 text-mygreentwo"></i>Phone Number</label>
                                        <input id="PhoneNumber"
                                               asp-for="PhoneNumber"
                                               placeholder="eg 0700000000"
                                               class="form-control r-0 light s-12 "
                                               required
                                               type="text" />
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                    </div>

                                    <div class="form-group col-md-4 m-0">
                                        <label for="EmailAddress" class="col-form-label s-12"><i class="icon-email mr-2 text-mygreentwo"></i>Email Address</label>
                                        <input id="EmailAddress"
                                               asp-for="EmailAddress"
                                               placeholder="eg:mail@domain.com"
                                               class="form-control r-0 light s-12 "
                                               required
                                               type="text" />
                                        <span asp-validation-for="EmailAddress" class="text-danger"></span>
                                    </div>
                                    <div class="form-group col-md-4 m-0">
                                        <label for="address" class="col-form-label s-12"><i class="icon-email text-mygreen mr-2"></i>Select Role</label>
                                        <select class="form-control r-0 light s-12 "  asp-for="RoleName">
                                            <option value=" ">Select User Role</option>
                                            @foreach (var item in ViewBag.Roles)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }


                                        </select>
                                        <span asp-validation-for="RoleName" class="text-danger"></span>
                                    </div>
                                    @*<div class="form-group col-md-4 m-0">
                                            <label for="PostaAddress" class="col-form-label s-12">
                                                <i class="icon-contact_mail mr-2 text-mygreentwo"></i>Postal Address(optional)
                                            </label>
                                            <input id="PostaAddress"
                                                   asp-for="PostaAddress"
                                                   placeholder="eg:PO Box"
                                                   class="form-control r-0 light s-12 "
                                                   type="text" />
                                            <span asp-validation-for="PostaAddress" class="text-danger"></span>
                                        </div>*@
                                </div>
                                <div class="form-row mt-1 cS-hidden">
                                    <div class="form-group col-md-4 m-0">
                                        <label for="PostaAddress" class="col-form-label s-12">
                                            <i class="icon-contact_mail mr-2  text-mygreentwo"></i>Posta Address(optional)
                                        </label>
                                        <input id="PostaAddress"
                                               asp-for="WSPId"
                                               value="@ViewBag.Id"
                                               class="form-control r-0 light s-12 "
                                               readonly
                                               type="text" />
                                        <span asp-validation-for="WSPId" class="text-danger"></span>
                                    </div>
                                </div>
                        </div>
                        <hr />
                        <div class="card-body">
                            <button type="submit" class="btn mygreentwo btn-primary btn-lg col text-center">
                                <i class="icon-save mr-2"> </i>Save
                            </button>
                        </div>
                    </div>
                </form>


                @section Scripts {
                    <partial name="_ValidationScriptsPartial" />
                }
            </div>
        </div>
    </div>
</div>

