@model IEnumerable<MeterDownloadSerializer>
@{
    ViewData["Title"] = "WSPMeters";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model.Any())
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="tab-pane animated fadeInUpShort show active" id="v-pills-all" role="tabpanel" aria-labelledby="v-pills-all-tab">
                <!-- page description here -->
                <div class="card no-b shadow ">

                    <div class="card-body shadow">
                        <div class="row my-3 ">
                            <div class="col-md-12">
                                <h5>Meters List For @Model.Select(p => p.WSP).FirstOrDefault()</h5>

                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane animated fadeInUpShort" id="v-pills-buyers" role="tabpanel" aria-labelledby="v-pills-buyers-tab">
            </div>
            <div class="tab-pane animated fadeInUpShort show active"
                 id="v-pills-all"
                 role="tabpanel"
                 aria-labelledby="v-pills-all-tab">
                <div class="row my-3">
                    <div class="col-md-12">
                        <div class="card-body white r-0 shadow">
                            <div class="panel-heading text-center">
                                <div class="panel-body panelsetup mb-3 ">
                                    <h2>Meter List </h2>
                                    <hr />
                                </div>
                            </div>
                            <div class="table-responsive datatablestyle">
                                <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">
                                    <thead>
                                        <tr class="no-b">
                                            <th>
                                                <div class="d-none d-lg-block">Telemetry ID</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Meter Code</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">IMSI</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Batery Voltage (Volts)</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Signal Strenth (DBi)</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Longitude</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Latitude</div>
                                            </th>
                                            @*<th>
                                                    <div class="d-none d-lg-block">View Telemetry Details </div>
                                                </th>*@


                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.Id</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.MeterCode</div>
                                                </td>

                                                <td>
                                                    <div class="d-none d-lg-block">@item.IMSI</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.BateryVoltage</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.SignalStrength</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.Longitude</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.Latitude</div>
                                                </td>
                                                @*<td>
                                                        <a href="/WSP/ViewTelemetry/@item.Id"
                                                           class="btn btn-primary btn-sm ml-4 ">View Telemetry</a>
                                                    </td>*@
                                            </tr>

                                        }

                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
else
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <!-- page description here -->
            <div class="card no-b shadow ">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-lg-12">
                            <h1>Meters Requested</h1>
                            <h6>Nothing Here Yet</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <!-- end of page description here -->
    </div>
}




