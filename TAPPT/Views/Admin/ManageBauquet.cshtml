@model BouquetViewModel
@{
    ViewData["Title"] = "ManageBauquet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-body">
        <div class="container-fluid animatedParent animateOnce">
            <div class="card no-b shadow mt-4 mb-2">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Edit Bouquets</h1>
                            <h6>Use this page to edit bouquets </h6>
                        </div>

                    </div>
                </div>
            </div>
            <div class="container-fluid animatedParent animateOnce">
                <div class="animated fadeInUpShort">
                    <div class="row my-3">
                        <div class="col-md-12 white shadow">
                            <form asp-action="EditBouquet" asp-controller="Admin" asp-antiforgery="true" method="post">
                                <div class="card no-b">
                                    <div class="card-body">
                                        <div class="form-row">
                                            <div class="col-md-6">
                                                <div class="form-group m-0">
                                                    <label for="Name" class="col-form-label s-12">Bouquet Name</label>
                                                    <input asp-for="Name"
                                                           value="@Model.Name"
                                                           class="form-control r-0 light s-12 "
                                                           required
                                                           type="text" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group m-0">
                                                    <label for="Price" class="col-form-label s-12">Bouquet Price</label>
                                                    <input asp-for="Price"
                                                           value="@Model.Price"
                                                           class="form-control r-0 light s-12 "
                                                           required
                                                           type="number" />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-row" style="display:none">
                                            <div class="col-md-12">
                                                <div class="form-group m-0">
                                                    <label for="name" class="col-form-label s-12">Id</label>
                                                    <input asp-for="Id"
                                                           value="@Model.Id"
                                                           class="form-control r-0 light s-12 "
                                                           readonly
                                                           required
                                                           type="text" />
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <hr />
                                    <div class="card-body">
                                        <button type="submit" class="btn btn-primary btn-lg col text-center">
                                            <i class="icon-save mr-2"> </i>Save Changes
                                        </button>
                                    </div>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>