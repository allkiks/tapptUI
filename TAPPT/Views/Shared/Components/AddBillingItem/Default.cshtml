@model CreateBillingItemSerializer

<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3" id="v-pills-tabContent">
        <div class="card no-b ">

            <div class="card-body">
                <div class="row my-3 ">
                    <div class="col-md-12">
                        <h1>Add a billing item</h1>
                        <h6>Please fill in the form below to add a billing item<a href="/WSP/AddZone">  </a></h6>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="animated fadeInUpShort">
        <div class="row my-3">
            <div class="col-md-8 offset-md-2 mt-5">
                <form asp-action="AddBillingItem" asp-controller="Setting" method="post"
                      class="" asp-antiforgery="true">
                    <div class="card no-b">
                        <div class="card-body">
                            <h5 class="card-title">Add Billing Item</h5>
                            <div class="form-row">
                                <div class="col-md-8">
                                    <div class="form-group m-0">
                                        <label asp-for="ItemName" class="col-form-label s-12">Item Name</label>
                                        <input asp-for="ItemName" id="ItemName"
                                               placeholder="Please enter an item name"
                                               class="form-control r-0 light s-12 "
                                               required
                                               type="text" />
                                        <span asp-validation-for="ItemName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-0">
                                        <label asp-for="Rate" class="col-form-label s-12">Charge Rate</label>
                                        <input asp-for="Rate" id="Rate"
                                               placeholder="Please enter the charge rate"
                                               class="form-control r-0 light s-12 "
                                               required
                                               type="number" />
                                        <span asp-validation-for="Rate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group m-0 cS-hidden">
                                        <label asp-for="UserId" class="col-form-label s-12">User Id</label>
                                        <input asp-for="UserId" id="ItemName"
                                               placeholder="e.g sewarage charges"
                                               class="form-control r-0 light s-12 "
                                               value="@ViewBag.UserId"
                                               type="text" />
                                        <span asp-validation-for="UserId" class="text-danger"></span>
                                    </div>

                                </div>
                                <div class="col-md-3 offset-md-1">
                                    <span>
                                        <i class="icon icon-note-add2 s-64 text-blue"></i>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <hr />
                        <div class="card-body">
                            <button type="submit" class="btn btn-primary pull-right">
                                <i class="icon-save mr-2"></i>Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
