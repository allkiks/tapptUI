@model IEnumerable<TariffsDownloadSerializer>
<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3 mb-5" id="v-pills-tabContent">
        <div class="card no-b r-0 shadow ">

            <div class="card-body">
                <div class="row my-3 ">
                    <div class="col-md-12">
                        <h1>Tariffs</h1>
                        <h6>The table below displays the current tariffs used nationally </h6>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @if (Model.Any())
    {


        <div class="row my-3">
            <div class="col-md-12">
                <div class="card-body white r-0 shadow">
                    <div class="panel-heading">
                        <div class="panel-body panelsetup text-center">
                            <h4>Gazetted Tariffs Types</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="table-responsive datatablestyle">
                        <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">

                            <thead>
                                <tr class="no-b">

                                    <th>
                                        <div class="d-none d-lg-block">Name</div>
                                    </th>
                                    <th>
                                        <div class="d-none d-lg-block">Edit</div>
                                    </th>
                                    <th>
                                        <div class="d-none d-lg-block">Delete</div>
                                    </th>
                                </tr>
                            </thead>

                            <tbody>


                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex">

                                                <div>
                                                    <div>
                                                        <strong>@item.Name</strong>
                                                    </div>

                                                </div>
                                            </div>
                                        </td>

                                        <td>
                                            <a href="/Setting/EditTariff/@item.Id"
                                               class="btn mygreentwo btn-primary btn-sm ml-5">
                                                Edit Tariff
                                            </a>
                                        </td>

                                        @*<td>
                                                <a href="/Setting/EditTariff/@item.Id">
                                                    <i class="icon-pencil fa fa-lg"></i>
                                                </a>

                                            </td>*@
                                        <td>
                                            <a href="/Setting/DeleteTariff/@item.Id"
                                                class="btn btn-primary myred btn-sm ml-5 ">
                                                Delete Tariff
                                            </a>
                                        </td>
                                        @*<td>

                                                <a href="/Setting/DeleteTariff/@item.Id">
                                                    <i class="icon-delete fa fa-lg" style="color:red;"></i>
                                                </a>
                                            </td>*@
                                    </tr>
                                }



                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="tab-pane animated fadeInUpShort show active"
             id="v-pills-all"
             role="tabpanel"
             aria-labelledby="v-pills-all-tab">
            <div class="row my-3">
                <div class="col-md-12">
                    <div class="card r-0 shadow">
                        <div style="text-align:center;color:darkblue">
                            <P>Nothing here yet</P>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane animated fadeInUpShort"
             id="v-pills-buyers"
             role="tabpanel"
             aria-labelledby="v-pills-buyers-tab">
        </div>
    }

</div>
</div>
