@model TariffUploadSerializer

      
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3 mb-5" id="v-pills-tabContent">
            <div class="card no-b ">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Edit Tariff </h1>
                            <h6>Fill In The form below to edit a tariff</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="animated fadeInUpShort">
            <div class="row my-3">
                <div class="col-md-12 ">
                    <form asp-action="EditTariff" asp-controller="Setting" method="post"
                          class="" asp-antiforgery="true">
                        <div class="card no-b">
                            <div class="card-body">
                             
                                <div class="form-row">
                                    <div class="col-md-12">
                                        <div class="form-group m-0">
                                            <label asp-for="Name" class="col-form-label s-12"><h3>New Tariff Name</h3></label>
                                            <input asp-for="Name" id="ItemName"
                                                   placeholder="Enter A New Name Tariff Name"
                                                   class="form-control r-0 light s-12 "
                                                   type="text" 
                                            
                                                   required/>
                                                  
                                            <span asp-validation-for="Name" class="text-danger"></span>
                                        </div>
                                        <div class="form-group m-0 cS-hidden">
                                            <label asp-for="Id" class="col-form-label s-12">Id</label>
                                            <input asp-for="Id" id="ItemName"
                                                   placeholder="e.g sewarage charges"
                                                   class="form-control r-0 light s-12 "
                                                   value="@ViewBag.Id"
                                                   type="text" />
                                            <span asp-validation-for="Id" class="text-danger"></span>
                                        </div>
                                    </div>
                                    @*<div class="col-md-3 offset-md-1">
                                        <span>
                                            <i class="icon-document-edit2 s-64 ml-2 text-mygreentwo"></i>
                                        </span>
                                    </div>*@
                                </div>
                            </div>
                            <hr />
                            <div class="card-body">
                                <button type="submit" class="btn mygreentwo text-white pull-right">
                                    <i class="icon-save mr-2"></i>Save
                                </button>
                                <a href="/Setting/Tariffs" class="btn mygreentwo text-white btn-primary pull-right">
                                    <i class="icon-cancel mr-2"></i> Cancel
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
