@model IEnumerable<UtlitiesDownloadSerializer>
<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3" id="v-pills-tabContent">
        <div class="card no-b shadow">

            <div class="card-body">
                <div class="row my-3 ">
                    <div class="col-md-12">
                        <h1>Meters By Water Service Provider</h1>
                        <h6>This page displays All water meters by a Water service provider</h6>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-md-12">
            <div class="card-body white r-0 shadow">

                <div class="table-responsive datatablestyle">
                    <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">
                        <thead>
                            <tr class="no-b">
                                <th>
                                    <div class="d-none d-lg-block">
                                        Water Service Provider
                                    </div>
                                </th>
                                <th>
                                    <div class="d-none d-lg-block">
                                        Number Of Meters
                                    </div>
                                </th>
                                <th>
                                    <div class="d-none d-lg-block">Action</div>
                                </th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                                {
                            <tr>


                                <td>
                                    <div class="d-none d-lg-block">
                                       @item.Name
                                    </div>
                                </td>
                                <td>
                                    <div class="d-none d-lg-block">
                                        @item.CountMeters
                                    </div>
                                </td>

                                <td>
                                    <a href="/Admin/MeterByWsp/@item.Id"
                                       class="btn btn-primary btn-sm ml-5">View Details</a>
                                </td>
                            </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
