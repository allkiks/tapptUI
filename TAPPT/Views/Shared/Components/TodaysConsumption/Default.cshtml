@model IEnumerable<UtlitiesDownloadSerializer>

<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3" id="v-pills-tabContent">
        <div class="card no-b shadow ">

            <div class="card-body  mb-3">
                <div class="row my-3 ">
                    <div class="col-md-12">
                        <h1>
                            Today's Total Consumption
                        </h1>
                        <h6>The table displays todays total water consumption by a water service provider </h6>
                    </div>

                </div>
            </div>
        </div>
        <div class="tab-pane animated fadeInUpShort show active"
             id="v-pills-all"
             role="tabpanel"
             aria-labelledby="v-pills-all-tab">
            <div class="row my-3">
                <div class="col-md-12">
                    <div class="card-body white r-0 shadow">

                        <div class="table-responsive">
                            <form>

                                <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">

                                    <thead>
                                        <tr class="no-b">

                                            <th>
                                                <div class="d-none d-lg-block">Water Service Provider</div>
                                            </th>

                                            <th>
                                                <div class="d-none d-lg-block">Total Number Of Meters</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Today's Consumption (m<sup>3</sup>)</div>
                                            </th>
                                            @*<th>
                                                    <div class="d-none d-lg-block">View details</div>
                                                </th>*@


                                            @*<th><div class="d-none d-lg-block">Add admin</div></th>
                                                <th><div class="d-none d-lg-block">View utility</div></th>
                                                <th><div class="d-none d-lg-block">Delete utility</div></th>*@

                                        </tr>
                                    </thead>

                                    <tbody>


                                        @foreach (var item in Model)
                                        {
                                        <tr>
                                            <td>
                                                <div class="d-flex">

                                                    <div>
                                                        <div>
                                                            <strong>@item.Name</strong>
                                                        </div>
                                                        @*<small>@item.Name</small>*@
                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-none d-lg-block">@item.CountMeters</div>
                                            </td>
                                            <td>
                                                <div class="d-none d-lg-block">@item.TodaysConsumption</div>
                                            </td>
                                            @*<td>
                                                    <div class="d-none d-lg-block">
                                                        <a href="#"
                                                           class="btn btn-primary btn-sm ml-5">View details</a>
                                                    </div>
                                                </td>*@

                                            @*<td>
                                                    <a href="/Account/AddWSPAdmin/@item.Id">
                                                        <i class="icon-user "> add admin</i>
                                                    </a>

                                                </td>
                                                <td>
                                                    <a href="/Setting/EditUtility/@item.Id">
                                                        <i class="icon-pencil ml-5 fa fa-lg"></i>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/Setting/DeleteTariff/@item.Id">
                                                        <i class="icon-delete ml-5 fa fa-lg" style="color:red;"></i>
                                                    </a>
                                                </td>*@
                                        </tr>

                                        }


                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

