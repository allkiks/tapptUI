@model IEnumerable<UtlitiesDownloadSerializer>
<div class="container-fluid animatedParent animateOnce">
    <div class="tab-content my-3" id="v-pills-tabContent">

        <div class="card no-b r-0 shadow ">

            <div class="card-body">
                <div class="row my-3 ">
                    <div class="col-md-12">
                        <h1>Water Utilities</h1>
                        <h6>The table below displays the current water utilities</h6>
                    </div>

                </div>
            </div>
        </div>
    </div>
    @if (Model.Any())
    {
        <div class="tab-pane animated fadeInUpShort show active"
             id="v-pills-all"
             role="tabpanel"
             aria-labelledby="v-pills-all-tab">
            <div class="row my-3">
                <div class="col-md-12">
                    <div class="card-body white r-0 shadow">
                        <div class="panel-heading text-center">
                            <div class="panel-body panelsetup mb-3 ">
                                <h2>Water Utilities </h2>
                                <hr />
                            </div>
                        </div>
                        <div class="table-responsive">
                            <form>

                                <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">

                                    <thead>
                                        <tr class="no-b">

                                            <th>
                                                <div class="d-none d-lg-block">Name</div>
                                            </th>

                                            <th>
                                                <div class="d-none d-lg-block">Postal Address</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Phone Number</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Email Address</div>
                                            </th>


                                            <th><div class="d-none d-lg-block">Add Admin</div></th>
                                            <th><div class="d-none d-lg-block">Edit Utility</div></th>
                                            @*<th><div class="d-none d-lg-block">Delete Utility</div></th>*@

                                        </tr>
                                    </thead>

                                    <tbody>


                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex">

                                                        <div>
                                                            <div>
                                                                <strong>@item.Name</strong>
                                                            </div>

                                                        </div>
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="d-none d-lg-block">@item.PostalAddress</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.PhoneNumber</div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">@item.Email</div>
                                                </td>

                                                <td>
                                                    <a href="/Account/AddWSPAdmin/@item.Id"
                                                       class="ml-2 btn btn-primary btn-sm">Add admin</a>
                                                </td>

                                                <td>
                                                    <a href="/Setting/EditUtility/@item.Id"
                                                       class="ml-2 btn btn-primary btn-sm">Edit Utility</a>
                                                </td>
                                                @*<td>
                                                   
                                                    <a href="#"
                                                       class="ml-2 btn btn-primary myred btn-sm">Delete Utility</a>
                                                </td>*@



                                                @*<td>
                                                        <a href="/Account/AddWSPAdmin/@item.Id">
                                                            <i class="icon-user "> add admin</i>
                                                        </a>

                                                    </td>*@
                                                @*<td>
                                                        <a href="/Setting/EditUtility/@item.Id">
                                                            <i class="icon-pencil ml-5 fa fa-lg"></i>
                                                        </a>
                                                    </td>*@
                                                @*<td>
                                                    <a href="/Setting/DeleteTariff/@item.Id">
                                                        <i class="icon-delete ml-5 fa fa-lg" style="color:red;"></i>
                                                    </a>
                                                </td>*@
                                            </tr>
                                        }



                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane animated fadeInUpShort"
             id="v-pills-buyers"
             role="tabpanel"
             aria-labelledby="v-pills-buyers-tab">
        </div>
    }
    else
    {
        <div class="tab-pane animated fadeInUpShort show active"
             id="v-pills-all"
             role="tabpanel"
             aria-labelledby="v-pills-all-tab">
            <div class="row my-3">
                <div class="col-md-12">
                    <div class="card r-0 shadow">
                        <div style="text-align:center;color:darkblue">
                            <P>Nothing here yet</P>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane animated fadeInUpShort"
             id="v-pills-buyers"
             role="tabpanel"
             aria-labelledby="v-pills-buyers-tab">
        </div>
    }

</div>

