@model IEnumerable<QueryConsumptionDownloadSerializer>

@if (Model.Any())
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="card no-b shadow">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Search for Meters Consumption</h1>
                            <h6>Use this page to search for meters consumption</h6>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card r-0 shadow">

                <div class="card-body b-b">

                    <form class="form-inline" asp-action="QueryConsumption" asp-controller="WSP" asp-antiforgery="true" method="post">
                        
                        <div class="input-group mb-0 mr-sm-2">
                            <div class="form-group  m-0">
                                FROM: <input name="StartDate" id="StartDate" class="form-control has-right-icon" type="date" required/>
                            </div>
                            <div class="form-group  ml-4">
                                TO: <input name="EndDate" id="EndDate" class="form-control has-right-icon" type="date" required/>
                            </div>

                        </div>

                        <div class="form-group col-md-0 m-0">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </span>
                        </div>
                    </form>
                </div>

            </div>

            <div class="tab-pane animated fadeInUpShort" id="v-pills-buyers" role="tabpanel" aria-labelledby="v-pills-buyers-tab">
            </div>
            <div class="container-fluid animatedParent animateOnce">
                <div class="row my-3">
                    <div class="col-md-12">
                        <div class="card r-0 shadow">
                            <div class="panel-heading">
                                <div class="panel-body text-center panelsetup">
                                    <h4>List Of Returned Meters</h4>
                                    <hr />
                                </div>
                            </div>
                            <div class="table-responsive datatablestyle">
                                <table id="tryy" class="table table-striped table-bordered dataTables-example" style="width:100%">
                                    <thead>
                                        <tr class="no-b">
                                            <th>
                                                <div class="d-none d-lg-block">Meter Code</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Geo Cordinates</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Last Transmitted</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Accumulated Volume</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Revenue for period</div>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div class="d-flex">
                                                        <div class="avatar avatar-md mr-3 mb-2 mt-1">
                                                            <span class="avatar-letter avatar-letter-m avatar-md circle"></span>
                                                        </div>
                                                        <div>
                                                            <div>
                                                                <strong>@item.MeterCode</strong>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="d-none d-lg-block">
                                                        @item.GeoCordinates
                                                    </div>
                                                </td>

                                                <td>
                                                    <div class="d-none d-lg-block">
                                                        @item.LastTransmitted
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">
                                                        @item.AccumulatedFlowRate
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-none d-lg-block">
                                                        @item.Revenue
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr class="no-b">
                                            <th>
                                                <div class="d-none d-lg-block">Meter Code</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Geo Cordinates</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Last Transmitted</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Accumulated Flow for period</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Revenue for period</div>
                                            </th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
}
else
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="card no-b ">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Search for Meters Consumption</h1>
                            <h6>Use this page to search for meters consumption</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div>

            <div class="card r-0 shadow">

                <div class="card-body b-b">

                    <form class="form-inline" asp-action="QueryConsumption" asp-controller="WSP" asp-antiforgery="true" method="post">
                        
                        <div class="input-group mb-0 mr-sm-2">
                            <div class="form-group  m-0">
                                FROM:
                                <input name="StartDate" id="StartDate" class="form-control has-right-icon" type="date" required />
                            </div>
                            <div class="form-group  ml-4">
                                TO:
                                <input name="EndDate" id="EndDate" class="form-control has-right-icon" type="date" required/>
                            </div>

                        </div>

                        <div class="form-group col-md-0 m-0">
                            <span class="input-group-btn">
                                <button type="submit" class="btn btn-primary">Search</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
}
