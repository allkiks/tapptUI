@model IEnumerable<QueriedMetersDownloadSerializer>

@if (Model.Any())
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="card no-b shadow">

                <div class="card-body ">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Search For Meter Transmission Status</h1>
                            <h6>Use this page to Search for meter transmission status using a date range</h6>
                        </div>

                    </div>
                </div>
            </div>

            <div class="card r-0 shadow mt-4">

                <div class="card-body b-b">

                    <form asp-action="QueryMeters" asp-controller="WSP" asp-antiforgery="true" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <select name="QueryStatus" id="QueryStatus" class="form-control has-right-icon">
                                    <option value="">Select Search Type</option>
                                    <option value="0">Transmitted</option>
                                    <option value="1">Not Transmitted</option>
                                </select>
                            </div>
                            <div class=" form-group col-md-3">
                                <div class="row">
                                    <div class="col-md-2 mt-2">
                                        <label>From: </label>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <input name="StartDate" id="StartDate" class="form-control has-right-icon" type="date" />
                                        </div>
                                    </div>
                                </div>

                            </div>


                            <div class="form-group col-md-3">
                                <div class="row">
                                    <div class="col-md-2 mt-2">
                                        <label>To: </label>
                                    </div>
                                    <div class="col-md-10">
                                        <div class="form-group">
                                            <input name="EndDate" id="EndDate" class="form-control has-right-icon" type="date" />
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="form-group col-md-3 ">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-primary btn-lg">Search</button>
                                </span>
                            </div>
                        </div>

                    </form>
                </div>

            </div>


            <div class="row my-3">
                <div class="col-md-12">
                    <div class="card-body white r-0 shadow mb-5">
                        <div class="panel-heading text-center">
                            <div class="panel-body panelsetup">
                                <h4>List Of Returned Meters</h4>
                                <hr />
                            </div>
                        </div>
                        <div class="table-responsive datatablestyle">
                            <table id="tryy" class="table table-striped table-bordered display nowrap" style="width:100%">
                                <thead>
                                    <tr class="no-b">
                                        <th>
                                            <div class="d-none d-lg-block">ID</div>
                                        </th>
                                        <th>
                                            <div class="d-none d-lg-block">Time and Date Transmitted</div>
                                        </th>

                                        <th>
                                            <div class="d-none d-lg-block">Meter Code</div>
                                        </th>
                                        <th>
                                            <div class="d-none d-lg-block">Lattitude</div>
                                        </th>
                                        <th>
                                            <div class="d-none d-lg-block">Longitude</div>
                                        </th>


                                        <th>
                                            <div class="d-none d-lg-block">Accumulated Consumption(m<sup>3</sup>)</div>
                                        </th>
                                        <th>
                                            <div class="d-none d-lg-block">Bill Amount(Kshs)</div>
                                        </th>
                                        <th>
                                            <div class="d-none d-lg-block">View Details</div>
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-none d-lg-block">
                                                    @item.Id
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-none d-lg-block">
                                                    @item.LastTransmitted
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-flex">
                                                    <div>
                                                        <div>
                                                            <strong>@item.MeterCode</strong>
                                                        </div>

                                                    </div>
                                                </div>
                                            </td>

                                            <td>
                                                <div class="d-none d-lg-block">
                                                    @item.Lattitude
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-none d-lg-block">
                                                    @item.Longitude
                                                </div>
                                            </td>



                                            <td>
                                                <div class="d-none d-lg-block text-right">
                                                    @item.AccumulatedFlowRate
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-none d-lg-block text-right">
                                                    @item.Bill
                                                </div>
                                            </td>
                                            <td>
                                                <a href="/WSP/MeterDetails/@item.Id">
                                                    <button type="button" class="btn btn-primary btn-sm ">View details</button>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                                @*<tfoot>
                                        <tr class="no-b">
                                            <th>
                                                <div class="d-none d-lg-block">Meter Code</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Geo Cordinates</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Last Transmitted</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">Accumulated Flow</div>
                                            </th>
                                            <th>
                                                <div class="d-none d-lg-block">View Details</div>
                                            </th>
                                        </tr>
                                    </tfoot>*@
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

}
else
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="card no-b shadow">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Search For Meters</h1>
                            <h6>Use this page to Search for meters using a date range</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div>

            <div class="card r-0 shadow">

                <div class="card-body b-b">

                      <form  asp-action="QueryMeters" asp-controller="WSP" asp-antiforgery="true" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-3 col-sm-3 col-lg-3 col-xl-3">
                                <select name="QueryStatus" id="QueryStatus" class="form-control has-right-icon">
                                    <option value="">Select Search Type</option>
                                    <option value="0">Transmitted</option>
                                    <option value="1">Not Transmitted</option>
                                </select>
                            </div>
                            <div class=" form-group col-md-3 col-sm-3 col-lg-3 col-xl-3">
                                <div class="row">
                                    <div class=" form-group col-md-4 col-sm-2 col-lg-2 col-xl-2">
                                        <label>From: </label>
                                    </div>
                                    <div class="col-md-8 col-sm-10 col-lg-10 col-xl-10">
                                        <div class="form-group">
                                            <input name="StartDate" id="StartDate" class="form-control has-right-icon" type="date" />
                                        </div>
                                    </div>
                                </div>

                            </div>


                            <div class="form-group col-md-3 col-sm-3 col-lg-3 col-xl-3">
                                <div class="row">
                                    <div class="col-md-2 col-sm-2 col-lg-2 col-xl-2 ">
                                        <label>To: </label>
                                    </div>
                                    <div class="col-md-10 col-sm-10 col-lg-10 col-xl-10 ">
                                        <div class="form-group">
                                            <input name="EndDate" id="EndDate" class="form-control has-right-icon" type="date" />
                                        </div>
                                    </div>
                                </div>
                            </div>



                            <div class="form-group col-md-3 col-sm-3 col-lg-3 col-xl-3 ">
                                <span class="input-group-btn">
                                    <button type="submit" class="btn btn-primary btn-lg">Search</button>
                                </span>
                            </div>
                        </div>

                    </form>
                </div>
            </div>
        </div>

    </div>

}
