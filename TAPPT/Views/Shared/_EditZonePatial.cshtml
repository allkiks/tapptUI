@model IEnumerable<ZoneViewModel>
@if (Model.Any())
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="container-fluid animatedParent animateOnce">
                <div class="card no-b shadow mt-4 mb-2">

                    <div class="card-body">
                        <div class="row my-3 ">
                            <div class="col-md-12">
                                <h1>Edit Zone</h1>
                                <h6>Use the form below to edit a zone</h6>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="container-fluid animatedParent animateOnce">
                    <div class="animated fadeInUpShort">
                        <div class="row my-3">
                            <div class="col-md-12 mt-4 white shadow">
                                @foreach (var item in Model)
                                {
                                    <form asp-action="EditZone" asp-controller="WSP" asp-antiforgery="true" method="post">
                                        <div class="card no-b">
                                            <div class="card-body">
                                                <div class="form-row">
                                                    <div class="col-md-12">
                                                        <div class="form-group m-0">
                                                            <label for="name" class="col-form-label s-12">Name</label>
                                                            <input id="MinimumFlow"
                                                                   name="Name"
                                                                   Id="Name"
                                                                   value="@item.Name"
                                                                   class="form-control r-0 light s-12 "
                                                                   required
                                                                   type="text" />
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="col-md-12" style="display:none">
                                                        <div class="form-group m-0">
                                                            <label for="name" class="col-form-label s-12">Name</label>
                                                            <input id="MinimumFlow"
                                                                   name="Id"
                                                                   Id="Id"
                                                                   value="@item.Id"
                                                                   class="form-control r-0 light s-12 "
                                                                   readonly
                                                                   required
                                                                   type="text" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                            <div class="card-body">
                                                <button type="submit" class="btn btn-primary btn-lg col text-center">
                                                    <i class="icon-save mr-2"> </i>Save Changes
                                                </button>
                                            </div>
                                        </div>
                                    </form>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid animatedParent animateOnce">
        <div class="tab-content my-3" id="v-pills-tabContent">
            <div class="card no-b ">

                <div class="card-body">
                    <div class="row my-3 ">
                        <div class="col-md-12">
                            <h1>Zone List</h1>
                            <h6>Nothing here yet, try again later</h6>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane animated fadeInUpShort"
             id="v-pills-buyers"
             role="tabpanel"
             aria-labelledby="v-pills-buyers-tab"></div>
    </div>

}
